---
import GitHub from "../icons/GitHub.astro"
import Vue from "../icons/Vue.astro"
import Tailwind from "../icons/Tailwind.astro"
import Link from "../icons/Link.astro"
import LinkButton from "../components/LinkButton.astro"

const TAGS = {
  VUE: {
    name: "Vue.js",
    class: "bg-black text-white",
    icon: Vue,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Administrador de gastos",
    description:
      "Aplicación web para administrar gastos utilizando Vue.js",
    link: "https://administrador-gastos-vue.netlify.app",
    github: "https://github.com/MarceloAranguizDev/admin-gastos",
    image: "/projects/admin-gastos.webp",
    tags: [TAGS.VUE],
  },
  {
    title: "Guitarla",
    description:
      "Aplicación web de venta de guitarras con carrito de compras utilizando Vue.js",
    link: "https://guitar-star.netlify.app/",
    github: "https://github.com/MarceloAranguizDev/guitarla-vue",
    image: "/projects/guitar-la.webp",
    tags: [TAGS.VUE],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Marcelo Aranguiz proyectos" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-blue-500">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>


